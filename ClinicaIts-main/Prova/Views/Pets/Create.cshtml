@model Prova.Models.PetViewModel
@{
    ViewData["Title"] = "Create Pet";
}
<h1>Create Pet</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Species" class="form-label"></label>
        <input asp-for="Species" class="form-control" type="text" />
        <span asp-validation-for="Species" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Breed" class="form-label"></label>
        <input asp-for="Breed" class="form-control" type="text" />
        <span asp-validation-for="Breed" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label"></label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

<partial name="_ValidationScriptsPartial" />

