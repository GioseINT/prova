@model Prova.Models.AppointmentViewModel
@{
    ViewData["Title"] = "Delete Appointment";
}
<h1>Delete Appointment</h1>

<div class="alert alert-warning">Are you sure you want to delete this?</div>

<dl class="row">
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date.ToString("g")</dd>
    <dt class="col-sm-2">Reason</dt>
    <dd class="col-sm-10">@Model.Reason</dd>
    <dt class="col-sm-2">Fee</dt>
    <dd class="col-sm-10">@Model.Fee</dd>
    <dt class="col-sm-2">Pet Id</dt>
    <dd class="col-sm-10">@Model.PetId</dd>
    <dt class="col-sm-2">Veterinary Id</dt>
    <dd class="col-sm-10">@Model.VeterinayId</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

