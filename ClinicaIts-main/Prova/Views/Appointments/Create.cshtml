@model Prova.Models.AppointmentViewModel
@{
    ViewData["Title"] = "Create Appointment";
}
<h1>Create Appointment</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control" type="datetime-local" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Reason" class="form-label"></label>
        <input asp-for="Reason" class="form-control" type="text" />
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Fee" class="form-label"></label>
        <input asp-for="Fee" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Fee" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Pet</label>
        <select asp-for="PetId" class="form-select" asp-items="ViewBag.PetId">
            <option value="">-- Seleziona --</option>
        </select>
        <span asp-validation-for="PetId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Veterinary</label>
        <select asp-for="VeterinayId" class="form-select" asp-items="ViewBag.VeterinayId">
            <option value="">-- Seleziona --</option>
        </select>
        <span asp-validation-for="VeterinayId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

<partial name="_ValidationScriptsPartial" />
