@model IEnumerable<Prova.Models.VeterinaryViewModel>
@{
    ViewData["Title"] = "Veterinaries";
}
<h1>Veterinaries</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <a asp-controller="Pets" asp-action="Index" class="btn btn-outline-secondary">Pets</a>
    <a asp-controller="Appointments" asp-action="Index" class="btn btn-outline-secondary">Appointments</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Qualification</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Qualification</td>
            <td>@item.Phone</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
 </table>

