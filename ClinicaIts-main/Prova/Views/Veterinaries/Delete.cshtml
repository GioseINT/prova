@model Prova.Models.VeterinaryViewModel
@{
    ViewData["Title"] = "Delete Veterinary";
}
<h1>Delete Veterinary</h1>

<div class="alert alert-warning">Are you sure you want to delete this?</div>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Qualification</dt>
    <dd class="col-sm-10">@Model.Qualification</dd>
    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Phone</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

